---
import { One } from "@/components/table";

export interface Props extends HTMLAttributes<"table"> {}

const styles = {
    "box-sizing": "border-box",
    width: "100%",
    "border-radius": "6px !important",
    border: "1px solid #c8cbcd",
    padding: "4px 24px",
    "font-size": "15px"
};
---

<One style={Object.assign({}, styles, Astro.props.style)} {...Astro.props}>
    <slot />
</One>
