---
import Template, { type Props } from "@/components/templates/Article.astro";
import P from "@/components/Paragraph.astro";
import Link from "@/components/Link.astro";
import Button from "@/components/Button.astro";

const buttonStyles = {
    "font-weight": "600",
    width: "100%"
};
---

<Template {...Astro.props}>
    <span slot="title">Verify your account</span>
    <P>Dear <strong>%USER%</strong>,</P>
    <P>
        Your recent activity requires a verification of your account. We need a further confirmation. Please click the
        button or link below to verify your account.
    </P>
    <P>If it's not you that requested this, please ignore this email.</P>
    <P style={{ "text-align": "center" }}>
        <Button href="%LINK%" style={buttonStyles}>Verify account</Button>
    </P>
    <P>If the button above does not work, please copy and paste the following link into your browser:</P>
    <P>
        <Link href="%LINK%" target="_blank" style={{ cursor: "text", "font-size": "14px" }}>%LINK%</Link>
    </P>
    <P>This email is sent by system, please do not reply.</P>
</Template>
